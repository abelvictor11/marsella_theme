<style>
.guia-cta {
  position: relative;
  padding: 120px 0;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  overflow: hidden;
  color: white;
}

.guia-cta__background {
  position: absolute;
  inset: 0;
  overflow: hidden;
}

.guia-cta__circle {
  position: absolute;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.1);
  animation: float 20s ease-in-out infinite;
}

.guia-cta__circle--1 {
  width: 300px;
  height: 300px;
  top: -100px;
  left: -100px;
  animation-delay: 0s;
}

.guia-cta__circle--2 {
  width: 400px;
  height: 400px;
  bottom: -150px;
  right: -150px;
  animation-delay: 5s;
}

.guia-cta__circle--3 {
  width: 200px;
  height: 200px;
  top: 50%;
  right: 10%;
  animation-delay: 10s;
}

.guia-cta__content {
  position: relative;
  z-index: 1;
  text-align: center;
  max-width: 900px;
  margin: 0 auto;
  padding: 0 20px;
}

.guia-cta__title {
  font-size: 56px;
  font-weight: 300;
  font-style: italic;
  margin: 0 0 30px;
  line-height: 1.2;
  font-family: 'PP Editorial New', Georgia, serif;
}

.guia-cta__description {
  font-size: 20px;
  line-height: 1.7;
  margin: 0 0 50px;
  opacity: 0.95;
}

.guia-cta__buttons {
  display: flex;
  gap: 20px;
  justify-content: center;
  flex-wrap: wrap;
  margin-bottom: 60px;
}

.guia-cta__button {
  display: inline-flex;
  align-items: center;
  gap: 10px;
  padding: 18px 40px;
  border-radius: 50px;
  font-weight: 600;
  font-size: 16px;
  text-decoration: none;
  transition: all 0.3s ease;
  border: 2px solid transparent;
}

.guia-cta__button--primary {
  background: white;
  color: #667eea;
  box-shadow: 0 10px 30px rgba(0,0,0,0.2);
}

.guia-cta__button--primary:hover {
  transform: translateY(-3px);
  box-shadow: 0 15px 40px rgba(0,0,0,0.3);
}

.guia-cta__button--secondary {
  background: transparent;
  color: white;
  border-color: white;
}

.guia-cta__button--secondary:hover {
  background: white;
  color: #667eea;
  transform: translateY(-3px);
}

.guia-cta__features {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 30px;
  margin-top: 60px;
  padding-top: 60px;
  border-top: 1px solid rgba(255,255,255,0.2);
}

.feature-item {
  display: flex;
  align-items: center;
  gap: 15px;
  font-size: 16px;
  font-weight: 500;
}

.feature-item svg {
  width: 30px;
  height: 30px;
  flex-shrink: 0;
  opacity: 0.9;
}

@keyframes float {
  0%, 100% {
    transform: translate(0, 0) scale(1);
  }
  33% {
    transform: translate(30px, -30px) scale(1.1);
  }
  66% {
    transform: translate(-20px, 20px) scale(0.9);
  }
}

@media (max-width: 768px) {
  .guia-cta {
    padding: 80px 0;
  }
  
  .guia-cta__title {
    font-size: 36px;
  }
  
  .guia-cta__description {
    font-size: 16px;
  }
  
  .guia-cta__buttons {
    flex-direction: column;
    align-items: stretch;
  }
  
  .guia-cta__button {
    justify-content: center;
  }
  
  .guia-cta__features {
    grid-template-columns: 1fr;
    text-align: left;
  }
}
</style>

