{{ 'component-trust-statement.css' | asset_url | stylesheet_tag }}

<div class="trust-statement-section section-{{ section.id }}" 
     style="--section-bg: {{ section.settings.section_bg_color }}; 
            --section-padding-top: {{ section.settings.padding_top }}px;
            --section-padding-bottom: {{ section.settings.padding_bottom }}px;">
  
  <div class="{% if section.settings.container == 'fullwidth' %}container-full{% elsif section.settings.container == '1170' %}container-1170{% elsif section.settings.container == '1370' %}container-1370{% elsif section.settings.container == '1770' %}container-1770{% else %}container{% endif %}">
    
    <div class="trust-statement-wrapper">
      
      {%- comment -%} Badge Pill {%- endcomment -%}
      {%- if section.settings.show_badge and section.settings.badge_text != blank -%}
        <div class="trust-badge animate-fade-in" 
             style="--badge-bg: {{ section.settings.badge_bg_color }};
                    --badge-text-color: {{ section.settings.badge_text_color }};
                    --badge-border-color: {{ section.settings.badge_border_color }};">
          {{ section.settings.badge_text }}
        </div>
      {%- endif -%}

      {%- comment -%} Main Title {%- endcomment -%}
      <div class="trust-title-container">
        {%- if section.settings.title_line_1 != blank -%}
          <h2 class="trust-title trust-title-line-1 animate-title" 
              style="--title-color: {{ section.settings.title_color }};
                     --title-size: {{ section.settings.title_size }}px;
                     --title-size-mobile: {{ section.settings.title_size_mobile }}px;
                     --title-weight: {{ section.settings.title_weight }};
                     --title-line-height: {{ section.settings.title_line_height | divided_by: 10.0 }};">
            {{ section.settings.title_line_1 }}
          </h2>
        {%- endif -%}
        
        {%- if section.settings.title_line_2 != blank -%}
          <h2 class="trust-title trust-title-line-2 animate-title" 
              style="--title-color: {{ section.settings.title_color }};
                     --title-size: {{ section.settings.title_size }}px;
                     --title-size-mobile: {{ section.settings.title_size_mobile }}px;
                     --title-weight: {{ section.settings.title_weight }};
                     --title-line-height: {{ section.settings.title_line_height | divided_by: 10.0 }};">
            {{ section.settings.title_line_2 }}
          </h2>
        {%- endif -%}
        
        {%- if section.settings.title_line_3 != blank -%}
          <h2 class="trust-title trust-title-line-3 trust-title-italic animate-title" 
              style="--title-color: {{ section.settings.title_color }};
                     --title-size: {{ section.settings.title_size }}px;
                     --title-size-mobile: {{ section.settings.title_size_mobile }}px;
                     --title-weight: {{ section.settings.title_weight }};
                     --title-line-height: {{ section.settings.title_line_height | divided_by: 10.0 }};">
            {{ section.settings.title_line_3 }}
          </h2>
        {%- endif -%}
        
        {%- if section.settings.title_line_4 != blank -%}
          <h2 class="trust-title trust-title-line-4 animate-title" 
              style="--title-color: {{ section.settings.title_color }};
                     --title-size: {{ section.settings.title_size }}px;
                     --title-size-mobile: {{ section.settings.title_size_mobile }}px;
                     --title-weight: {{ section.settings.title_weight }};
                     --title-line-height: {{ section.settings.title_line_height | divided_by: 10.0 }};">
            {{ section.settings.title_line_4 }}
          </h2>
        {%- endif -%}
      </div>

      {%- comment -%} Hero Image {%- endcomment -%}
      {%- if section.settings.hero_image != blank -%}
        <div class="trust-hero-image animate-scale-in"
             style="--image-top: {{ section.settings.image_top }}px;
                    --image-left: {{ section.settings.image_left }}%;
                    --image-width: {{ section.settings.image_width }}px;
                    --image-top-mobile: {{ section.settings.image_top_mobile }}px;
                    --image-left-mobile: {{ section.settings.image_left_mobile }}%;
                    --image-width-mobile: {{ section.settings.image_width_mobile }}px;
                    --image-rotation: {{ section.settings.image_rotation }}deg;">
          <img src="{{ section.settings.hero_image | image_url: width: 800 }}" 
               alt="{{ section.settings.hero_image.alt | escape }}"
               loading="lazy"
               width="{{ section.settings.hero_image.width }}"
               height="{{ section.settings.hero_image.height }}">
        </div>
      {%- endif -%}

      {%- comment -%} Philosophy Button {%- endcomment -%}
      {%- if section.settings.show_philosophy_button -%}
        <a href="{{ section.settings.philosophy_link | default: '#' }}" 
           class="trust-philosophy-button animate-fade-in"
           style="--button-bg: {{ section.settings.philosophy_button_bg }};
                  --button-text-color: {{ section.settings.philosophy_button_text_color }};
                  --button-border-color: {{ section.settings.philosophy_button_border_color }};
                  --button-top: {{ section.settings.philosophy_button_top }}px;
                  --button-left: {{ section.settings.philosophy_button_left }}%;
                  --button-top-mobile: {{ section.settings.philosophy_button_top_mobile }}px;
                  --button-left-mobile: {{ section.settings.philosophy_button_left_mobile }}%;">
          <span class="button-icon">
            {%- if section.settings.philosophy_button_icon != blank -%}
              {{ section.settings.philosophy_button_icon }}
            {%- else -%}
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M5 12h14M12 5l7 7-7 7"/>
              </svg>
            {%- endif -%}
          </span>
          <span class="button-text">
            {{ section.settings.philosophy_button_text | default: "NUESTRA FILOSOFÍA" }}
          </span>
        </a>
      {%- endif -%}

      {%- comment -%} Features List {%- endcomment -%}
      {%- if section.blocks.size > 0 -%}
        <div class="trust-features-list"
             style="--features-top: {{ section.settings.features_top }}px;
                    --features-right: {{ section.settings.features_right }}%;
                    --features-top-mobile: {{ section.settings.features_top_mobile }}px;
                    --features-right-mobile: {{ section.settings.features_right_mobile }}%;">
          {%- for block in section.blocks -%}
            <div class="trust-feature-item animate-slide-in" 
                 style="--animation-delay: {{ forloop.index | times: 0.1 }}s;"
                 {{ block.shopify_attributes }}>
              
              {%- if block.settings.feature_icon != blank -%}
                <div class="feature-icon" 
                     style="--icon-color: {{ block.settings.icon_color }}; 
                            --icon-size: {{ block.settings.icon_size }}px;">
                  {{ block.settings.feature_icon }}
                </div>
              {%- endif -%}
              
              <div class="feature-content">
                {%- if block.settings.feature_title != blank -%}
                  <h3 class="feature-title" 
                      style="--feature-title-color: {{ block.settings.title_color }};
                             --feature-title-size: {{ block.settings.title_size }}px;
                             --feature-title-weight: {{ block.settings.title_weight }};">
                    {{ block.settings.feature_title }}
                  </h3>
                {%- endif -%}
                
                {%- if block.settings.feature_description != blank -%}
                  <div class="feature-description" 
                       style="--feature-desc-color: {{ block.settings.description_color }};
                              --feature-desc-size: {{ block.settings.description_size }}px;">
                    {{ block.settings.feature_description }}
                  </div>
                {%- endif -%}
              </div>
            </div>
          {%- endfor -%}
        </div>
      {%- endif -%}

    </div>
  </div>
</div>

