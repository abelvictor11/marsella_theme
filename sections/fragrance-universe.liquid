            <mask id="maskarrowtext_mobile_{{ section.id }}">
              <path class="arrow-path" stroke-dashoffset="390" stroke-dasharray="380, 380" d="M62.0791 194.046C62.3807 194.003 62.5899 193.723 62.5464 193.421L61.8364 188.506C61.7928 188.204 61.513 187.995 61.2114 188.039C60.9098 188.082 60.7006 188.362 60.7441 188.664L61.3752 193.033L57.0062 193.664C56.7045 193.707 56.4954 193.987 56.5389 194.289C56.5825 194.59 56.8623 194.8 57.1639 194.756L62.0791 194.046ZM121.492 0.948265C56.0968 1.95061 15.1899 30.7812 3.65924 69.2165C-7.86788 107.64 10.058 155.358 61.6698 193.942L62.3306 193.058C10.9425 154.642 -6.6316 107.36 4.7163 69.5336C16.0607 31.719 56.4038 3.04963 121.509 2.05174L121.492 0.948265Z"/>
