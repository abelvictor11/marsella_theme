{{ 'component-hero-fullscreen.css' | asset_url | stylesheet_tag }}

<section class="hero-fullscreen section-{{ section.id }}"
         style="--hero-text-color: {{ section.settings.text_color }};
                --hero-overlay-opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};
                --hero-overlay-color: {{ section.settings.overlay_color }};">
  
  {%- comment -%} Background Media (Video or Image) {%- endcomment -%}
  <div class="hero-background">
    {%- if section.settings.video_url != blank -%}
      {%- comment -%} Video Background {%- endcomment -%}
      <video class="hero-video"
             autoplay
             muted
             loop
             playsinline
             {% if section.settings.poster_image != blank %}
             poster="{{ section.settings.poster_image | image_url: width: 1920 }}"
             {% endif %}>
        <source src="{{ section.settings.video_url }}" type="video/mp4">
      </video>
    {%- elsif section.settings.background_image != blank -%}
      {%- comment -%} Image Background {%- endcomment -%}
      <img src="{{ section.settings.background_image | image_url: width: 1920 }}"
           alt="{{ section.settings.background_image.alt | escape }}"
           class="hero-image"
           loading="eager">
    {%- endif -%}

    {%- comment -%} Overlay {%- endcomment -%}
    {%- if section.settings.show_overlay -%}
      <div class="hero-overlay"></div>
    {%- endif -%}
  </div>

  {%- comment -%} Hero Content {%- endcomment -%}
  <div class="hero-content-wrapper">
    <div class="{% if section.settings.container == 'fullwidth' %}container-full{% elsif section.settings.container == '1170' %}container-1170{% elsif section.settings.container == '1370' %}container-1370{% elsif section.settings.container == '1770' %}container-1770{% else %}container{% endif %}">
      
      <div class="hero-content"
           style="--content-max-width: {{ section.settings.content_max_width }}px;
                  --content-text-align: {{ section.settings.content_alignment }};">
        
        {%- comment -%} Logo Above Title {%- endcomment -%}
        {%- if section.settings.show_logo and section.settings.logo_image != blank -%}
          <div class="hero-logo animate-fade-in"
               style="--logo-width: {{ section.settings.logo_width }}px;
                      --logo-width-mobile: {{ section.settings.logo_width_mobile }}px;">
            <img src="{{ section.settings.logo_image | image_url: width: 400 }}"
                 alt="{{ section.settings.logo_image.alt | escape }}">
          </div>
        {%- endif -%}

        {%- comment -%} Main Title {%- endcomment -%}
        {%- if section.settings.title != blank -%}
          <h1 class="hero-title animate-fade-in-up"
              style="--title-size: {{ section.settings.title_size }}px;
                     --title-size-mobile: {{ section.settings.title_size_mobile }}px;
                     --title-weight: {{ section.settings.title_weight }};
                     --title-line-height: {{ section.settings.title_line_height | divided_by: 10.0 }};">
            {{ section.settings.title }}
          </h1>
        {%- endif -%}

        {%- comment -%} Subtitle/Description {%- endcomment -%}
        {%- if section.settings.subtitle != blank -%}
          <div class="hero-subtitle animate-fade-in-up"
               style="--subtitle-size: {{ section.settings.subtitle_size }}px;
                      --subtitle-size-mobile: {{ section.settings.subtitle_size_mobile }}px;
                      --subtitle-weight: {{ section.settings.subtitle_weight }};">
            {{ section.settings.subtitle }}
          </div>
        {%- endif -%}

        {%- comment -%} CTA Button {%- endcomment -%}
        {%- if section.settings.show_button and section.settings.button_text != blank -%}
          <div class="hero-button-wrapper animate-fade-in-up">
            <a href="{{ section.settings.button_link | default: '#' }}"
               class="hero-button"
               style="--button-bg: {{ section.settings.button_bg_color }};
                      --button-text-color: {{ section.settings.button_text_color }};
                      --button-border-color: {{ section.settings.button_border_color }};">
              <span class="button-text">{{ section.settings.button_text }}</span>
              {%- if section.settings.button_icon != blank -%}
                <span class="button-icon">{{ section.settings.button_icon }}</span>
              {%- else -%}
                <span class="button-icon">
                  <svg data-v-1e53e120="" class="icon-arrow" width="13" height="8" viewBox="0 0 13 8" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M12.3536 4.35355C12.5488 4.15829 12.5488 3.84171 12.3536 3.64645L9.17157 0.464466C8.97631 0.269204 8.65973 0.269204 8.46447 0.464466C8.2692 0.659728 8.2692 0.976311 8.46447 1.17157L11.2929 4L8.46447 6.82843C8.2692 7.02369 8.2692 7.34027 8.46447 7.53553C8.65973 7.7308 8.97631 7.7308 9.17157 7.53553L12.3536 4.35355ZM0 4.5H12V3.5H0V4.5Z" fill="white"></path></svg>
                </span>
              {%- endif -%}
            </a>
          </div>
        {%- endif -%}

      </div>

    </div>
  </div>

  {%- comment -%} Scroll Indicator {%- endcomment -%}
  {%- if section.settings.show_scroll_indicator -%}
    <div class="hero-scroll-indicator">
      <div class="scroll-indicator-line"></div>
    </div>
  {%- endif -%}

</section>

{% schema %}
{
  "name": "Hero Fullscreen",
  "class": "section-hero-fullscreen",
  "settings": [
    {
      "type": "header",
      "content": "Container Settings"
    },
    {
      "type": "select",
      "id": "container",
      "label": "Container Width",
      "options": [
        {"value": "container", "label": "Default"},
        {"value": "1170", "label": "1170px"},
        {"value": "1370", "label": "1370px"},
        {"value": "1770", "label": "1770px"},
        {"value": "fullwidth", "label": "Full Width"}
      ],
      "default": "1370"
    },
    {
      "type": "header",
      "content": "Background Media"
    },
    {
      "type": "url",
      "id": "video_url",
      "label": "Video URL (MP4)",
      "info": "Upload video to Shopify Files and paste URL here. Video takes priority over image."
    },
    {
      "type": "image_picker",
      "id": "poster_image",
      "label": "Video Poster Image",
      "info": "Shown while video loads"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image",
      "info": "Used if no video is provided. Recommended: 1920x1080px"
    },
    {
      "type": "checkbox",
      "id": "show_overlay",
      "label": "Show Overlay",
      "default": true
    },
    {
      "type": "color",
      "id": "overlay_color",
      "label": "Overlay Color",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "label": "Overlay Opacity",
      "min": 0,
      "max": 80,
      "step": 5,
      "unit": "%",
      "default": 30
    },
    {
      "type": "header",
      "content": "Content Settings"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#ffffff"
    },
    {
      "type": "select",
      "id": "content_alignment",
      "label": "Content Alignment",
      "options": [
        {"value": "left", "label": "Left"},
        {"value": "center", "label": "Center"},
        {"value": "right", "label": "Right"}
      ],
      "default": "center"
    },
    {
      "type": "range",
      "id": "content_max_width",
      "label": "Content Max Width",
      "min": 400,
      "max": 1200,
      "step": 50,
      "unit": "px",
      "default": 800
    },
    {
      "type": "header",
      "content": "Logo Above Title"
    },
    {
      "type": "checkbox",
      "id": "show_logo",
      "label": "Show Logo",
      "default": false
    },
    {
      "type": "image_picker",
      "id": "logo_image",
      "label": "Logo Image"
    },
    {
      "type": "range",
      "id": "logo_width",
      "label": "Logo Width (Desktop)",
      "min": 60,
      "max": 300,
      "step": 10,
      "unit": "px",
      "default": 120
    },
    {
      "type": "range",
      "id": "logo_width_mobile",
      "label": "Logo Width (Mobile)",
      "min": 50,
      "max": 200,
      "step": 10,
      "unit": "px",
      "default": 80
    },
    {
      "type": "header",
      "content": "Title Settings"
    },
    {
      "type": "html",
      "id": "title",
      "label": "Title (HTML)",
      "default": "<em>True</em> to Oneself<br>kind to <em>Nature</em>",
      "info": "Use <em> for italic words, <br> for line breaks"
    },
    {
      "type": "range",
      "id": "title_size",
      "label": "Title Font Size (Desktop)",
      "min": 30,
      "max": 120,
      "step": 5,
      "unit": "px",
      "default": 70
    },
    {
      "type": "range",
      "id": "title_size_mobile",
      "label": "Title Font Size (Mobile)",
      "min": 24,
      "max": 60,
      "step": 2,
      "unit": "px",
      "default": 36
    },
    {
      "type": "select",
      "id": "title_weight",
      "label": "Title Font Weight",
      "options": [
        {"value": "300", "label": "Light"},
        {"value": "400", "label": "Normal"},
        {"value": "500", "label": "Medium"},
        {"value": "600", "label": "Semi Bold"},
        {"value": "700", "label": "Bold"}
      ],
      "default": "400"
    },
    {
      "type": "range",
      "id": "title_line_height",
      "label": "Title Line Height",
      "min": 8,
      "max": 15,
      "step": 1,
      "default": 11,
      "info": "Value will be divided by 10 (11 = 1.1 line height)"
    },
    {
      "type": "header",
      "content": "Subtitle Settings"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Subtitle/Description",
      "default": "Unreservedly honest products that truly work, be kind to skin and the planet – no exceptions!"
    },
    {
      "type": "range",
      "id": "subtitle_size",
      "label": "Subtitle Font Size (Desktop)",
      "min": 14,
      "max": 32,
      "step": 2,
      "unit": "px",
      "default": 18
    },
    {
      "type": "range",
      "id": "subtitle_size_mobile",
      "label": "Subtitle Font Size (Mobile)",
      "min": 12,
      "max": 24,
      "step": 1,
      "unit": "px",
      "default": 14
    },
    {
      "type": "select",
      "id": "subtitle_weight",
      "label": "Subtitle Font Weight",
      "options": [
        {"value": "300", "label": "Light"},
        {"value": "400", "label": "Normal"},
        {"value": "500", "label": "Medium"}
      ],
      "default": "300"
    },
    {
      "type": "header",
      "content": "Button Settings"
    },
    {
      "type": "checkbox",
      "id": "show_button",
      "label": "Show Button",
      "default": true
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "EXPLORE ALL PRODUCTS"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "html",
      "id": "button_icon",
      "label": "Button Icon SVG (optional)"
    },
    {
      "type": "color",
      "id": "button_bg_color",
      "label": "Button Background",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Button Text Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "button_border_color",
      "label": "Button Border Color",
      "default": "#ffffff"
    },
    {
      "type": "header",
      "content": "Additional Options"
    },
    {
      "type": "checkbox",
      "id": "show_scroll_indicator",
      "label": "Show Scroll Indicator",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "Hero Fullscreen"
    }
  ]
}
{% endschema %}
